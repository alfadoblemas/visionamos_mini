<h1>Listing agencias</h1>

<table>
  <thead>
    <tr>
      <th>Nombre</th>
      <th>Direccion</th>
      <th>Nit</th>
      <th>Telefono</th>
      <th>Estado</th>
      <th>Nombre director</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @agencias.each do |agencia| %>
      <tr>
        <td><%= agencia.nombre %></td>
        <td><%= agencia.direccion %></td>
        <td><%= agencia.nit %></td>
        <td><%= agencia.telefono %></td>
        <td><%= agencia.estado %></td>
        <td><%= agencia.nombre_director %></td>
        <td><%= link_to 'Show', agencia %></td>
        <td><%= link_to 'Edit', edit_agencia_path(agencia) %></td>
        <td><%= link_to 'Destroy', agencia, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

